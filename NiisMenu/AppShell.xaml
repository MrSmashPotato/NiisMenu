<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NiisMenu.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NiisMenu"
    Shell.FlyoutBehavior="Disabled"
    Title="NiisMenu">

    <FlyoutItem Title="DashBoad" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
                Icon = "bern.png" />   
        <ShellContent
            Title="AddMenu"
            ContentTemplate="{DataTemplate local:AddMenu}"
            Route="AddMenu" 
                Icon="caticon.png"/>
        <ShellContent
            Title="CustomerPage"
            ContentTemplate="{DataTemplate local:ListMenu}"
            Route="ListMenu" 
                Icon="caticon.png"/>
    </FlyoutItem>


</Shell>
